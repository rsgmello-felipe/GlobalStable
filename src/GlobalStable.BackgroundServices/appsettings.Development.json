{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },

  "AllowedHosts": "*",

  "ConnectionStrings": {
    "DefaultConnection": "Host=localhost;Port=5432;Database=mydb;Username=myuser;Password=mypassword"
  },

  "RabbitMQ": {
    "Host": "localhost",
    "Port": 5672,
    "Username": "guest",
    "Password": "guest",
    "AutomaticRecoveryEnabled": true,
    "NetworkRecoveryIntervalSeconds": 5
  },

  "JwtSettings": {
    "Authority": "https://my-auth-provider.com/",
    "Audience": "my-api",
    "Issuer": "my-issuer",
    "SecretKey": "super-secret-key"
  },

  "ExternalServices": {
    "MeuServicoUrl": "https://api.meuservico.com",
    "AuthServiceUrl": "https://auth.meuservico.com"
  },

  "CertificateSettings": {
    "UseCertificate": true,
    "CertificatePath": "caminho-do-certificado.pfx",
    "CertificatePassword": "senha-do-certificado"
  }
}
